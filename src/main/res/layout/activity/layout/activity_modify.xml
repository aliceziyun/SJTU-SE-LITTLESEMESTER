<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="2dp">

            <ImageButton
                android:id="@+id/modify_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_arrow_back"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/modify_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="个人资料"
                android:textSize="18sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更换头像"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:textSize="17dp"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/user_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_camera"
                android:layout_toLeftOf="@+id/profile_choose"
                android:layout_marginRight="10dp"/>

            <ImageButton
                android:id="@+id/profile_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_keyboard_arrow_right"
                android:background="@color/white"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:textSize="17dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/change_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NickName"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D6D6D6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="以下信息用于获取精准推荐、运动计算消耗等"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:textSize="15sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:textSize="17dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/gender_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gender"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/gender_choose"/>

            <ImageButton
                android:id="@+id/gender_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_keyboard_arrow_right"
                android:background="@color/white"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_prefer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运动偏好"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:textSize="17dp"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:textSize="17dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/birthday_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yyyy-mm-dd"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/birthday_choose"/>

            <ImageButton
                android:id="@+id/birthday_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_keyboard_arrow_right"
                android:background="@color/white"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身高"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:textSize="17dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/change_userheight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx cm"
                android:layout_toLeftOf="@+id/height_choose"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:id="@+id/height_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_keyboard_arrow_right"
                android:background="@color/white"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:textSize="17dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/change_userweight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx kg"
                android:layout_toLeftOf="@+id/weight_choose"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:id="@+id/weight_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_keyboard_arrow_right"
                android:background="@color/white"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>