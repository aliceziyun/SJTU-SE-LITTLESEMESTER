<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:padding="3dp">

        <ImageButton
            android:id="@+id/video_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@mipmap/ic_arrow_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="课程筛选"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/btn_start_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_dehaze_44" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check_yoga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginLeft="10dp"
                android:text="瑜伽" />
            <CheckBox
                android:id="@+id/check_hiit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginLeft="10dp"
                android:text="hiit" />
            <CheckBox
                android:id="@+id/check_stretch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginLeft="10dp"
                android:text="拉伸" />
            <CheckBox
                android:id="@+id/check_pamela"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginLeft="10dp"
                android:text="帕梅拉" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <EditText
                android:id="@+id/et_search_input"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:hint="视频名称/关键字"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <com.example.myapplication.view.SeekRangeBar
                android:id="@+id/seek_range_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_min_without_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最小值：0min"
                    android:layout_marginLeft="30dp"
                    />
                <TextView
                    android:id="@+id/tv_max_without_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最大值：120min"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/video_search_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>