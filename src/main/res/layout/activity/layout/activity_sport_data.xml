                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="今日活动"
                android:textColor="#49CA6D"
                android:layout_margin="3dp"/>
            </LinearLayout>

            <LinearLayout
