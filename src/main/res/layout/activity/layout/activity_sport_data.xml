                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:padding="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:layout_margin="3dp"/>
                <ImageButton
                    android:id="@+id/day_history_btn"
                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:background="@drawable/detail_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计消耗"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp"
                    android:paddingLeft="3dp"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/total_consume_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:text="0"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kcal"
                        android:textSize="14sp"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:background="@drawable/detail_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动时长"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp"
                    android:paddingLeft="3dp"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/day_total_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:text="0"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分钟"
                        android:textSize="14sp"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:background="@drawable/detail_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距离目标"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp"
                    android:paddingLeft="3dp"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/goal_distance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:text="0"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kcal"
                        android:textSize="14sp"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:background="@drawable/detail_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运动目标"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp"
                    android:paddingLeft="3dp"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/goal_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:text="0"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分钟"
                        android:textSize="14sp"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

