<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dynamic_details_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/dynamic_details_back_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@mipmap/ic_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="动态详情"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey"
            android:textSize="15dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/dynamic_details_head_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/dynamic_details_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:layout_toRightOf="@id/dynamic_details_head_img"
            android:layout_alignTop="@id/dynamic_details_head_img"
            android:layout_marginLeft="12dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/dynamic_details_time_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/grey"
            android:layout_toRightOf="@id/dynamic_details_head_img"
            android:layout_below="@id/dynamic_details_name_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            />
    </RelativeLayout>
    <com.example.myapplication.view.NoLeftToRightScrollView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/dynamic_details_mViewpager"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                ></androidx.viewpager.widget.ViewPager>
            <TextView
                android:id="@+id/dynamic_details_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_margin="12dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="12dp"
                android:background="#F5F5F5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/text_commnet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="评论  "
                    android:textColor="@color/grey"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/text_comment_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/text_commnet"
                    android:text="0"
                    android:textColor="@color/grey"
                    android:textSize="13sp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F5F5F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
                <com.example.myapplication.view.NoScrollListView
                    android:id="@+id/dynamic_comment_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.example.myapplication.view.NoScrollListView>
            </LinearLayout>
        </LinearLayout>
    </com.example.myapplication.view.NoLeftToRightScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="3dp"
        android:gravity="center_vertical"
        >
        <EditText
            android:id="@+id/dynamic_comment_edt"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:hint="点我发一条友善的评论"
            android:paddingLeft="3dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:background="@drawable/comment_text"
            android:layout_marginLeft="12dp"/>
        <ImageButton
            android:id="@+id/dynamic_comment_send_btn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/send_comment"
            />
    </LinearLayout>
</LinearLayout>
